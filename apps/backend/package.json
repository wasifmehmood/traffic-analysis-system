{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node --watch ./src/server.js",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "db:migrate": "npx sequelize db:create && npx sequelize db:migrate",
    "db:migrate:create": "npx sequelize migration:generate --name",
    "db:migrate:undo": "npx sequelize db:migrate:undo",
    "db:migrate:status": "npx sequelize db:migrate:status",
    "test:unit": "jest --forceExit --colors -c jest.config.unit.cjs"
  },
  "dependencies": {
    "convict": "^6.2.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "^8.1.0",
    "http-errors": "~1.6.3",
    "lodash-es": "^4.17.21",
    "pino": "^9.6.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^29.7.0",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.2"
  },
  "type": "module"
}
